<div class="container">
    <div class="row"><!--style="margin-right:0px !important;"-->
        <div class="col-xs-12 text-center" id="top-bar">
            <img src="/assets/img/burger.png" alt="burger image">
            <h2>Eat-Da-Burger!</h2>
        </div>
  
        <div class="col-md-7 text-center task">
			<div class="row">
			<h1>Ready to Eat Burgers</h1>
			  {{#each burger_data}}
			    {{#unless this.devoured}}
			    <div class="col-xs-8 text-center">
			      <pre>{{this.id}}, {{this.burger_name}}</pre>
			    </div>
				<div class="offset-xs-2 col-md-3 text-center">
					<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						<input type="hidden" name="burger_id" type="text" value={{this.id}}>
						
						<button type="submit" class="btn btn-default paddingbtn">DEVOUR IT! </button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
		    </div>
		</div>
		
		<div class="col-md-5 text-center task">
			
				<h1>Eaten Burgers</h1>
			  {{#each burger_data}}
			    {{#if this.devoured}}
					<input class="form-control" type="text" style="margin: 0 0 10px;" placeholder="{{this.id}}, {{this.burger_name}}" readonly />
				{{/if}}
			  {{/each}}								
			
		 </div>   
		 

		<div class="col-xs-12 text-center enter_selection">
			
				<h1>Add a Burger</h1>
		  		<form method="POST" action="/burgers/create" class="button-size">
					<input type="text" placeholder="Enter a burger you'd like to eat" name="burger_name" class="form-control" value="" id="enter_text" />
					<br />
					<button type="submit" class="btn btn-default" id="text-enter-button">Submit! </button>
				</form>

		
		</div>

	</div>
</div>
